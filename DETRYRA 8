*DETYRA 6

import java.util.Scanner;

public class Shpejtesia {
    public static void main(String[] args) {
        Scanner skaneriJem = new Scanner(System.in);
        System.out.println("Sheno Shpejtesine:");
        short shpejtesia = skaneriJem.nextShort();

        if (shpejtesia == 0) {
            System.out.println("Vetura eshte e ndalur");
        } else if (shpejtesia <= 30) {
            System.out.println("Vetura eshte duke levizur ngadal");
        } else if (shpejtesia <= 60) {
            System.out.println("Vetura eshte duke levizur me shpejtesi normale");
        } else if (shpejtesia <= 90) {
            System.out.println("Vetura eshte duke levizur mbi shpejtesine normale");
        } else if (shpejtesia <= 120) {
            System.out.println("Vetura eshte duke levizur me shpejtesi shume te larte");
        }  else {
            System.out.println("shpejtesia e dhene është gabim.");
        }
    }

}

