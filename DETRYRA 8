*DETYRA 2

import java.util.Scanner;

public class DitetEJaves {
    public static void main(String args[]) {
        Scanner skaneriJem = new Scanner(System.in);
        
        System.out.println("Sheno emrin e dites se javes:");
        
        String ditaJaves = skaneriJem.nextLine();
        
        if(null == ditaJaves) {System.out.println("Dita e javes eshte shenuar gabim!");} else switch (ditaJaves) {
            case "E Hene":
                System.out.println("Dita e pare - Dite pune");
                break;
            case "E Marte":
                System.out.println("Dita e dyte - Dite pune");
                break;
            case "E Merkure":
                System.out.println("Dita e trete - Dite pune");
                break;
            case "E Enjte":
                System.out.println("Dita e katert - Dite pune");
                break;
            case "E Premte":
                System.out.println("Dita e peste - Dite pune");
                break;
            case "E Shtunde":
                System.out.println("Dita e gjashte - Dite vikendi");
                break;
            case "E Diele":
                System.out.println("Dita e shtate - Dite vikendi");
                break;
            default:
                System.out.println("Dita e javes eshte shenuar gabim!");
                break;
        }
    }
}

