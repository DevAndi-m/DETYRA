*DETYRA 4 

import java.util.Scanner;

public class Mosha {
    public static void main(String[] args) {
        Scanner skaneriJem = new Scanner(System.in);
        System.out.println("Sheno moshen:");
        int mosha = skaneriJem.nextInt();

        if (mosha == 1) {
            System.out.println("Moshe parashkollore - Nje");
        } else if (mosha == 2) {
            System.out.println("Moshe parashkollore - Dy");
        } else if (mosha == 3) {
            System.out.println("Moshe parashkollore - Tre");
        } else if (mosha == 4) {
            System.out.println("Moshe parashkollore - Kater");
        } else if (mosha == 5) {
            System.out.println("Moshe parashkollore - Pese");
        } else if (mosha == 6) {
            System.out.println("Moshe shkollore - Gjashte.");
        } else {
            System.out.println("mosha e dhene është gabim.");
        }
    }

}

