USHTRIMI 8

*DETYRA 1

import java.util.Scanner; 
public class MuajtEVitit {

    public static void main(String args[]) {
        Scanner skaneriJem = new Scanner(System.in);
        
        System.out.println("Vendos Muajin");
        
        byte muaji = skaneriJem.nextByte();
        
        switch(muaji){
            case 1: 
            System.out.println("Muaji eshte Janar!");
            break;
            
            case 2: 
            System.out.println("Muaji eshte Shkurt!");
            break;
            
            case 3: 
            System.out.println("Muaji eshte Mars!");
            break;
            
            case 4: 
            System.out.println("Muaji eshte Prill!");
            break;
            
            case 5: 
            System.out.println("Muaji eshte Maj!");
            break;
            
            case 6: 
            System.out.println("Muaji eshte Qershor!");
            break;
            
            case 7: 
            System.out.println("Muaji eshte Korrik!");
            break;
            
            case 8: 
            System.out.println("Muaji eshte Gusht!");
            break;
            
            case 9: 
            System.out.println("Muaji eshte Shtator!");
            break;
            
            case 10: 
            System.out.println("Muaji eshte Tetor!");
            break;
            
            case 11: 
            System.out.println("Muaji eshte Nentor!");
            break;
            
            case 12: 
            System.out.println("Muaji eshte Dhjetor!");
            break;
            
            default: 
                System.out.println("Muaji eshte dhene gabim!");
        }       
   };
}

