*DETYRA 5

import java.util.Scanner;

public class TeDhenatEAndit {

    public static void main(String args[]) {
        Scanner skaneriJem = new Scanner(System.in);

        System.out.println("Sheno numrin e ID-se:");
        int id = skaneriJem.nextInt();

        System.out.println("Sheno emrin:");
        String emri = skaneriJem.next();

        System.out.println("Sheno mbiemrin:");
        String mbiemri = skaneriJem.next();

        System.out.println("Sheno vitin e lindjes:");
        short vLindjes = skaneriJem.nextShort();

        System.out.println("Sheno vitin e studimit:");
        byte vStudimit = skaneriJem.nextByte();

        System.out.println("Ju ofruat keto te dhena personale:");
        System.out.println("ID: " + id);
        System.out.println("Emri: " + emri);
        System.out.println("Mbiemri: " + mbiemri);
        System.out.println("Viti i lindjes: " + vLindjes);
        System.out.println("Viti i studimit: " + vStudimit);

    }
}

